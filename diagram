Table article {
  id int [pk, increment]
  url tinytext [not null, unique]
  title tinytext
  r_date tinytext
  img tinytext
  txt_id int 
  topic_id int
}


Table topic {
  id int [pk, increment]
  name tinytext [not null, unique]
  url tinytext [not null, unique]
}

Table txt {
  id int [pk, increment]
  summary text
  article_text text [not null, unique]
}


Table article_author {
  id int [pk, increment]
  author_id int
  article_id int
}

Table author {
  id int [pk, increment]   
  name tinytext [not null, unique]
}

Table article_link {
  id int [pk, increment]
  article_id int 
  link_id int
}

Table link {
  id int [pk, increment]  
  name tinytext
  url tinytext 
}


Ref: article.topic_id > topic.id
Ref: txt.id - article.txt_id

Ref: article_author.article_id > article.id
Ref: article_author.author_id > author.id

Ref: article_link.article_id > article.id
Ref: article_link.link_id > link.id

