Table article {
  id int [pk, increment]
  url tinytext [not null, unique]
  title tinytext
  r_date tinytext
  img tinytext
  txt_id int 
  author_id int
  topic_id int
}

Table author {
  id int [pk, increment]
  name tinytext [not null, unique]
  title tinytext
}

Table topic {
  id int [pk, increment]
  name tinytext [not null, unique]
  url tinytext [not null, unique]
}

Table txt {
  id int [pk, increment]
  summary text [not null, unique]
  article_text text
}


Table article_tag {
  id int [pk, increment]
  tag_id int
  article_id int
}


Table tag {
  id int [pk, increment]   
  name tinytext [not null, unique]
  url tinytext [not null, unique]
}

Table article_link {
  id int [pk, increment]
  article_id int 
  link_id int
}

Table link {
  id int [pk, increment]  
  name tinytext
  url tinytext 
}


Ref: article.author_id > author.id 
Ref: article.topic_id > topic.id
Ref: txt.id - article.txt_id

Ref: article_tag.article_id > article.id
Ref: article_tag.tag_id > tag.id

Ref: article_link.article_id > article.id
Ref: article_link.link_id > link.id

